<% layout("layouts/boilerplate.ejs") %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <img
        src="https://images.unsplash.com/photo-1499059100788-a87c471a4e2a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1778&q=80"
        class="card-img-top"
        alt=""
      />
      <div class="card-body">
        <form
          action="/campgrounds"
          method="POST"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              name="campground[title]"
              id="title"
              required
            />
            <div class="valid-feedback">Lookks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
              class="form-control"
              type="text"
              name="campground[location]"
              id="location"
              required
            />
            <div class="valid-feedback">Lookks good!</div>
          </div>
          <div class="mb-3">
            <label for="image">Upload Images</label>
            <div class="form-file custom-file">
              <input
                type="file"
                class="form-file-input"
                id="image"
                name="image"
                multiple
              />
              <label class="form-file-label" for="image">
                <span class="form-file-text custom-file-label"
                  >Choose image(s)...</span
                >
                <span class="form-file-button">Browse</span>
              </label>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label" for="price">Campground Price</label>
            <div class="input-group">
              <span class="input-group-text" id="price-label">$</span>
              <input
                type="text"
                class="form-control"
                id="price"
                name="campground[price]"
                placeholder="0.00"
                aria-label="price"
                aria-describedby="price-label"
                required
              />
              <div class="valid-feedback">Lookks good!</div>
            </div>
          </div>
          <!-- </div> -->
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              type="text"
              name="campground[description]"
              id="description"
              required
            ></textarea>
            <div class="valid-feedback">Lookks good!</div>
          </div>

          <div class="mb-3">
            <button class="btn btn-info">Add campground</button>
          </div>
        </form>
        <a href="/campgrounds">back to campgrounds</a>
      </div>
    </div>
  </div>
</div>
